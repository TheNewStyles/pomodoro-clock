{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "prefer-const": "warn",
        "dot-notation": "warn",
        "no-var": "warn",
        "no-new-object": "warn",
        "object-shorthand": "warn",
        "quote-props":"warn",
        "no-array-constructor": "warn",
        "quotes": "warn",
        "prefer-template": "warn",
        "template-curly-spacing": "warn",
        "no-eval": "warn",
        "no-useless-escape": "warn",
        "func-style":"off",//turn on after all other rules are applied
        "no-plusplus":"off",//same as above
        "wrap-iife": "warn",
        "no-loop-func":"warn",
        "prefer-rest-params":"warn",
        "no-new-func":"warn",
        "space-before-blocks":"warn",
        "space-before-function-paren":"warn",
        "no-param-reassign":"warn",
        "prefer-spread":"warn",
        "arrow-spacing":"warn",
        "prefer-arrow-callback":"warn",
        "arrow-parens":"warn",
        "arrow-body-style":"warn",
        "no-confusing-arrow":"warn",
        "no-iterator":"warn",
        "no-restricted-syntax":"warn",
        "one-var":"off",
        "eqeqeq":"warn",
        "no-case-declarations":"warn",
        "no-nested-ternary":"warn",
        "no-unneeded-ternary":"warn",
        "brace-style":"warn",
        "indent":"warn",
        "keyword-spacing":"warn",
        "space-infix-ops":"warn",
        "newline-per-chained-call":"warn",
        "padded-blocks":"off",
        "space-in-parens":"warn",
        "object-curly-spacing":"warn",
        "array-bracket-spacing":"warn",
        "max-len":"warn",
        "comma-style":"warn",
        "comma-dangle":"warn",
        "semi":"warn",
        "radix":"warn",
        "id-length":"warn",
        "camelcase":"warn",
        "new-cap":"warn",
        "no-underscore-dangle":"warn"
    }
}